{
    "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "app/*.ts"],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./app/*"],
            "@adminBackend/*": ["./app/adminBackend/*"],
            "@shopifyGraphql/*": ["app/adminBackend/shopifyGraphql/*"]
        },
        "types": ["node", "@shopify/app-bridge-types", "@remix-run/node"]
    }
}
